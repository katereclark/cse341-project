<!DOCTYPE html>
<html>
  <head>
    <% include ../includes/header.ejs %> <% switch(style) { case '1' : %>
    <link rel="stylesheet" type="text/css" href="../../public/stylesheets/theme1.css" />
    <% break; case '2' : %>
    <link rel="stylesheet" type="text/css" href="../../public/stylesheets/theme2.css" />
    <% break; default: %>
    <link rel="stylesheet" type="text/css" href="../../public/stylesheets/main.css" />
    <% } %>
  </head>

  <body>
    <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1><%= title %></h1>
      </div>
    </div>
    <div class="container">
      <div>
        <div>
          <form action="/ta05/change-style" method="POST">
            <label for="css_style">Choose your theme:</label>
            <select id="css_style" name="css_style">
              <option value="0">Default (Blue)</option>
              <option value="1">Style 1 (Green)</option>
              <option value="2">Style 2 (Red)</option>
            </select>
            <button type="submit">Change Style</button>
          </form>
        </div>
        <div>
          <form action="/ta05/counter" method="POST">
            <input type="hidden" name="constant" value="0" />
            <button class="btn btn-default" type="submit">+</button>
          </form>
          <%= counter %>
          <form action="/ta05/counter" method="POST">
            <input type="hidden" name="constant" value="-1" />
            <button class="btn btn-default" type="submit">-</button>
          </form>
        </div>
        <div>
          <form action="/ta05/reset" method="POST">
            <input type="hidden" name="reset" value="true" />
            <button class="btn btn-default" type="submit">Reset Session</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>